<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Calculation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".Calculate">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/sphere" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shapebtn"
                android:padding="15dp"
                android:text="back"
                android:typeface="monospace"
                />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:padding="15dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/shapebtn"
                android:typeface="monospace"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Volume of a Sphere"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="(4/3) × pi × r3."
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary"
            android:textAlignment="center"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shapes"
            android:drawablePadding="10dp"
            android:hint="Enter Radius"
            android:textAlignment="center"
            android:padding="15dp"
            android:textColor="@color/design_default_color_secondary"
            android:textColorHighlight="@color/design_default_color_secondary"
            android:textColorHint="@color/design_default_color_secondary"
            android:inputType="numberDecimal"
            android:typeface="monospace"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="The volume is: "
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/txtOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_secondary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="0"
            android:typeface="monospace"/>

        <Button
            android:id="@+id/btnCalc"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:padding="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shapebtn"
            android:typeface="monospace"/>

        >

    </LinearLayout>
</ScrollView>